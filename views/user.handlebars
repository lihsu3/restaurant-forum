<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
  	<h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
		{{#ifCond user.id reqUId}}
    	<a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
    {{/ifCond}}
  </div>
  <hr>
</div>

<div class="card">
  <h5 class="card-header">{{restCount}}已評論餐廳</h5>
  <div class="card-body">
    <div class="row" style="text-align: center;">
      {{#each user.Comments}}
        <div class="col-2">
          <a href="/restaurants/{{this.Restaurant.id}}">
            <img class="" src="{{this.Restaurant.image}}" width="140px" height="140px">
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</div>